@model skudatabase.domain.Models.SKUPartConfig

@{
    ViewData["Title"] = "Create SKUPart Config";
}

<h1>Create SKUPart Config</h1>

<h4>SKUPart Config</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Length" class="control-label"></label>
                <input asp-for="Length" class="form-control" />
                <span asp-validation-for="Length" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GenericName" class="control-label"></label>
                <input asp-for="GenericName" class="form-control" />
                <span asp-validation-for="GenericName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsAlphaNumeric" class="control-label"></label>
                @Html.CheckBoxFor(model => model.IsAlphaNumeric)
                <span asp-validation-for="IsAlphaNumeric" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsCaseSensitive" class="control-label"></label>
                @Html.CheckBoxFor(model => model.IsCaseSensitive)
                <span asp-validation-for="IsCaseSensitive" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AllowPreceedingZero" class="control-label"></label>
                @Html.CheckBoxFor(model => model.AllowPreceedingZero)
                <span asp-validation-for="AllowPreceedingZero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RestrictConflictingLettersAndCharacters" class="control-label"></label>
                @Html.CheckBoxFor(model => model.RestrictConflictingLettersAndCharacters)
                <span asp-validation-for="RestrictConflictingLettersAndCharacters" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SKUConfigId" class="control-label"></label>
                <input asp-for="SKUConfigId" class="form-control" value="1" disabled />
                <span asp-validation-for="SKUConfigId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <input asp-for="Status" class="form-control" value="Draft" disabled />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>